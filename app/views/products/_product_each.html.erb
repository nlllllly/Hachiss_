<% products.each do |product| %>
    <div class="col-lg-3 pt-3">
        <div class="text-center">
            <%= link_to product_path(product) do %>
                <%= attachment_image_tag product, :image, :fill, 180, 180, class: "border", fallback: "pic_default/no-image.jpg", size:'180x180' %>
            <% end %>
        </div>

        <div class="pt-2"></div>

        <div class="text-left">
            <%= link_to product_path(product) do %>
                <h6><%= product.name %></h6>
            <% end %>
        </div>

        <div class="text-right">
            <%= product.add_tax_price.to_s(:delimited) %> 円
        </div>

        <div class="text-center">
            <%= render 'products/rate_average', product: product %>
        </div>

        <div class="pt-2"></div>

        <%# 商品お気に入りボタン %>
        <div class="buttons_<%= product.id %>">
            <%= render 'product_favorites/favorite_button', product: product %>
        </div>

        <div class="pt-2"></div>

        <div class="action">
            <%= link_to "詳細をみる", product_path(product), class:"btn btn-sm btn-hachiss col-lg-12" %>
        </div>

        <div class="pt-3"></div>
        <div class="border-bottom border-secondary"></div>
        <div class="pt-3"></div>

    </div>
<% end %>