<div class="container-fluid">
    <div class="row">

        <%# メイン %>
        <div class="col-lg-10 p-4">
            <div class="pb-4"></div>
            <div class="p-3" style="background-color: #f2f2f2; border: 3px solid #272343; border-radius: 2px;">
                
                <%# 商品の詳細 %>
                <div class="row p-4">
                    <div class="col-lg-6 text-center">
                        <div class="pt-4"></div>
                        <%= attachment_image_tag @product, :image, :fill, 320, 320, class: "border", fallback: "pic_default/no-image.jpg", size:'320x320' %>
                    </div>

                    <div class="col-lg-6">
                        <div class="row p-4">

                            <%# 商品名 %>
                            <div class="col-lg-12 py-3">
                                <h3><%= @product.name %></h3>
                            </div>

                            <%# 商品価格 %>
                            <div class="col-lg-6 py-3">
                                <p>商品価格（税込）<p>
                            </div>
                            <div class="col-lg-6 py-2">
                                <div class="text-right">
                                    <h4><%= @product.add_tax_price.to_s(:delimited) %> 円</h4>
                                </div>
                            </div>

                            <%# カートへ追加 フォーム %>
                            <div class="col-lg-12 py-2">
                                <% if customer_signed_in? %>
                                    <%= render 'cart_items/cart_item_form', product: @product, cart_item: @cart_item %>
                                <% else %>
                                    <%= link_to new_customer_session_path, class: "btn btn-sm btn-info col-lg-12" do %>
                                       カートへ追加するにはログイン
                                    <% end %>
                                <% end %>
                            </div>

                            <%# 商品お気に入りボタン %>
                            <div class="col-lg-10 pt-4 mx-auto">
                                <div class="buttons_<%= @product.id %>">
                                    <%= render 'product_favorites/favorite_button', product: @product %>
                                    <div class="pt-1"></div>
                                    <div class="text-center">
                                        お気に入り済みのユーザ <%= @product.product_favorites.count %>人
                                    </div>
                                </div>
                            </div>

                            <%# レビュー平均 %>
                            <div class="col-lg-6 py-3">
                                レビュー平均
                            </div>
                            <div class="col-lg-6 py-3">
                                <%= render 'products/rate_average', product: @product %>
                            </div>

                        </div>
                    </div>
                </div>

                <%# 商品説明 %>
                <div class="row mx-auto py-3">
                    <div class="col-lg-10">
                        <h6>商品の説明</h6>
                        <div class="pl-1">
                            <p><%= @product.description %><p>
                        </div>
                    </div>
                </div>


                <div class="pt-5"></div>
                <div style="border-top: 1px solid #272343;"></div>
                <div class="pt-4"></div>


                <%# コメント 一覧 %>
                <div class="row mx-auto py-4">
                    <div class="col-lg-12">
                        <h6>商品のコメント / <%= @product.product_comments.count %> 件</h6>
                        <%# コメントが存在している時だけコメントを表示 %>
                        <% if @product.product_comments.exists? %>
                            <%= render 'product_comments/comment_show', product: @product %>
                        <% else %>
                            <div class="text-center pt-5">
                                コメントはまだありません
                            </div>
                        <% end %>
                    </div>
                </div>
                <%# コメント 一覧 終わり %>


                <div class="pt-5"></div>

                <%# コメントフォーム %>
                <div class="row mx-auto py-4">
                    <div class="col-lg-12">
                        <%# 会員としてログインしている時だけ表示させる %>
                        <% if customer_signed_in? %>
                            <h6>コメントをする</h6>
                            <div class="pl-2">
                                <%= render 'product_comments/comment_form', product: @product, product_comment: @product_comment %>
                            </div>
                        <% end %>
                    </div>
                </div>
                <%# コメントフォーム 終わり %>

                
                <div class="pt-5"></div>
                <div class="border-top border-secondary"></div>
                <div class="pb-5"></div>


                <%# 商品の生産者 %>
                <div class="row p-4">

                    <div class="col-lg-8">
                        <div class="pt-4"></div>
                        <h5>この商品の生産者さんは...</h5>
                        <div class="pb-1"></div>

                        <div class="text-center py-4">
                            <h3>「 <%= @product.producer.name %> 」さん</h3>
                        </div>
                        <div class="text-center p-4">
                            <%= link_to producer_path(@product.producer) do %>
                                <h6 class="btn btn-sm btn-hachiss col-lg-8">詳細を見る</h6>
                            <% end %>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="text-center">
                            <%= link_to  producer_path(@product.producer) do %>
                                <%= attachment_image_tag @product.producer, :image, :fill, 200, 200, class: "border", fallback: "pic_default/no-image.jpg", size:'200x200' %>
                            <% end %>
                        </div>
                    </div>

                </div>


                
                <div class="pt-3"></div>
                <div class="border-bottom border-secondary"></div>
                <div class="pt-3"></div>
                
                

                <div class="col-lg-12">
                    <div class="pt-4"></div>

                    <p>「 <%= @product.producer.name  %> 」さんの他の商品はこちら</p>
                    <div class="row p-4">

                        <%# 生産者の商品 %>
                        <% @products.each do |product| %>
                            <div class="col-lg-2 pt-3">

                                <div class="text-center">
                                    <%= link_to product_path(product) do %>
                                        <%= attachment_image_tag product, :image, :fill, 120, 120, class: "border", fallback: "pic_default/no-image.jpg", size:'120x120' %>
                                    <% end %>
                                </div>

                                <div class="pt-2"></div>

                                <div class="text-left">
                                    <h6>
                                        <%= link_to product_path(product) do %>
                                            <%= product.name %>
                                        <% end %>
                                    </h6>
                                </div>
                                <div class="text-right">
                                    <p><%= product.add_tax_price.to_s(:delimited) %> 円</p>
                                </div>

                                <%= link_to "詳細をみる", product_path(product), class:"btn btn-sm btn-hachiss col-lg-12" %>

                            </div>

                        <% end %>
                        <%# 生産者の商品 終わり %>


                    </div>

                </div>
            </div>

        </div>

        <%# サイドバー %>
        <%= render 'layouts/sidebar', genres: @genres, producers: @producers %>

    </div>
</div>


<%# raty.js用 %>
<script>
  $('.review-rating').raty({
    readOnly: true,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>