<%= form_with(url: search_path, method: :get, local: true, class: "input-group") do |f| %>
    <%= f.text_field :keyword, id: "searching-form", class:"form-control form-control-sm input-group-prepend", placeholder:"商品を検索" %>
    <div class="input-group-append">
        <%= f.button "", type:"submit", class:"btn btn-sm btn-hachiss" do %>
            <i class="fas fa-search"></i>
        <% end %>
    </div>
<% end %>


<div style="position: absolute; width: 80%;">
    <ul class="list-group" id="result">
        <%# ここにliで検索結果候補が表示される %>
    </ul>
</div>