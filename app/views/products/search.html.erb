<div class="container-fluid">
    <div class="row">

        <%# メイン %>
        <div class="col-lg-10 p-4">

            <h3>商品検索結果 「 <%= params[:search] %> 」</h3>
            <div class="pb-2"></div>

            <div class="p-3" style="background-color: #f2f2f2; border: 3px solid #272343; border-radius: 2px;">
                
                <div class="pt-2"></div>

                <% if @search_products.exists? %>
                    <%# 商品がヒットしたとき %>
                    <h6>「 <%= @search_products.count %>件 」の商品がヒットしました</h6>
                    
                    <div class="row p-4">
                        <% @search_products.each do |product| %>
                            <div class="col-lg-3 pt-3">

                                <div class="text-center">
                                    <%= link_to product_path(product) do %>
                                        <%= attachment_image_tag product, :image, :fill, 180, 180, class: "border", fallback: "pic_default/no-image.jpg", size:'180x180' %>
                                    <% end %>
                                </div>

                                <div class="pt-2"></div>

                                <div class="text-left">
                                    <%= link_to product_path(product) do %>
                                        <h6><%= product.name %></h6>
                                    <% end %>
                                </div>

                                <div class="text-right">
                                    <p><%= product.add_tax_price.to_s(:delimited) %> 円</p>
                                </div>

                                <div class="">
                                    <p class="btn btn-sm btn-warning col-lg-12">お気に入り登録する <i class="far fa-star"></i></p>
                                    <p class="btn btn-sm btn-info col-lg-12">お気に入り登録済み <i class="fas fa-star"></i></p>
                                </div>

                                <div class="action">
                                    <%= link_to "詳細をみる", product_path(product), class:"btn btn-sm btn-hachiss col-lg-12" %>
                                </div>

                                <div class="pt-3"></div>
                                <div class="border-bottom border-secondary"></div>
                                <div class="pt-3"></div>

                            </div>
                        <% end %>
                    </div>
                    <%# 商品がヒットしたとき 終わり %>

                <% else %>
                    <%# 商品が存在しなかったとき %>
                    <h6>「 <%= @search_products.count %>件 」の商品がヒットしました</h6>
                    <div class="row p-4">
                        <div class="py-5 mx-auto">
                            <div class="pt-5"></div>
                            <h5>商品が見つかりませんでした</h5>
                            <div class="pb-5"></div>
                        </div>
                    </div>
                    <%# 商品が存在しなかったとき 終わり %>
                <% end %>
                    
                <% if @search_products.exists? %>
                    <%= paginate @search_products %>
                <% end %>

            </div>
        </div>

        <%# サイドバー %>
        <%= render 'layouts/sidebar', genres: @genres, producers: @producers %>

    </div>
</div>