<div class="container-fluid">
    <div class="row">

        <%# メイン %>
        <div class="col-lg-10 p-4">

            <h3>商品一覧</h3>
            <div class="text-right">
                <%# <%= render 'products/search_select' %>
            </div>
            <div class="pb-2"></div>

            <div class="p-3" style="background-color: #f2f2f2; border: 3px solid #272343; border-radius: 2px;">
                <div class="row p-4">
                    
                    <%# 商品個々の表示 %>
                    <% @products.each do |product| %>
                        <div class="col-lg-3 pt-3">
                            <div class="text-center">
                                <%= link_to product_path(product) do %>
                                    <%= attachment_image_tag product, :image, :fill, 180, 180, class: "border", fallback: "pic_default/no-image.jpg", size:'180x180' %>
                                <% end %>
                            </div>

                            <div class="pt-2"></div>

                            <div class="text-left">
                                <%= link_to product_path(product) do %>
                                    <h6><%= product.name %></h6>
                                <% end %>
                            </div>

                            <div class="text-right">
                                <p><%= product.add_tax_price.to_s(:delimited) %> 円</p>
                            </div>

                            <%# 商品お気に入りボタン %>
                            <div class="buttons_<%= product.id %>">
                                <%= render 'product_favorites/favorite_button', product: product %>
                            </div>

                            <div class="pt-2"></div>

                            <div class="action">
                                <%= link_to "詳細をみる", product_path(product), class:"btn btn-sm btn-hachiss col-lg-12" %>
                            </div>

                            <div class="pt-3"></div>
                            <div class="border-bottom border-secondary"></div>
                            <div class="pt-3"></div>

                        </div>
                    <% end %>
                    <%# 商品ここの表示 終わり %>

                </div>


                <%# ページネーション %>
                <div class="row">
                    <div class="mx-auto">
                        <div class="pt-4"></div>
                        <%= paginate @products %>
                    </div>
                </div>
                <%# ページネーション 終わり %>


            </div>
        
        </div>
        
        <%# サイドバー %>
        <%= render 'layouts/sidebar', genres: @genres, producers: @producers %>

    </div>
</div>