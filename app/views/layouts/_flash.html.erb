<%# メッセージ通知（noticeだったら「緑」で背景あり、alertだったら「赤」で通知） %>
<% flash.each do |name, msg| %>
    <% if name == "notice" %>

        <div id="flash-op" class="container-fluid">
            <div style="row">
                <div class="col-lg-4 ml-auto">
                    <div id="error_explanation" class="alert alert-success alert-dismissible fade show" role="alert">
                        <%# エラー表記 %>
                        <%= content_tag :div, msg, :class => "" if msg.is_a?(String) %>
                        <%# bootstrap追加 閉じるボタン %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

    <% elsif name == "alert" %>

        <div id="flash-op" class="container-fluid">
            <div style="row">
                <div class="col-lg-4 ml-auto">
                    <div id="error_explanation" class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%# エラー表記 %>
                        <%= content_tag :div, msg, :class => "" if msg.is_a?(String) %>
                        <%# bootstrap追加 閉じるボタン %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

    <% end %>
<% end %>
