<!DOCTYPE html>
<html>
  <head>
    <title>Hachiss</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

    <!-- ヘッダー -->
    <header class="header">
      <% if admin_signed_in? %>
        <%# 管理者用ヘッダー %>
        <%= render 'layouts/admin_header' %>
      <% else %>
        <%# 会員・ゲスト用ヘッダー %>
        <%= render 'layouts/customer_header' %>
      <% end %>
    </header>
    <!-- ヘッダー 終わり -->



    <%# flash表示 %>
    <%= render 'layouts/flash', flash: flash %>
    <%# flash表示 終わり %>

    <!-- メイン -->
    <div style="background-color: #fffffe; padding-top: 85px;">
      <%= yield %>
    </div>
    <!-- メインここまで -->




    <!-- フッター -->
    <footer class="footer">
      <% if admin_signed_in? %>
        <%# 管理者用フッター %>
        <%= render 'layouts/admin_footer' %>
      <% else %>
        <%# 会員・ゲスト用フッター %>
        <%= render 'layouts/customer_footer' %>
      <% end %>
    </footer>
    <!-- フッター 終わり -->





    <!-- ページトップへ戻るボタン -->
    <% if admin_signed_in? %>
      <%# 何も表示しない %>
    <% else %>
        <span id="back">
            <a href="#">
                <i class="fas fa-angle-up" style="font-size: 40px; color: #ffd803;"></i>
            </a>
        </span>
    <% end %>


  </body>
</html>
