<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>PRODUCT EDIT</h3>
        </div>

        <div class="col-lg-9 mx-auto my-4">
            <div class="p-4" style="background-color: #f2f2f2; border: 4px solid #5191c2; border-radius: 2px;">
                <h5>商品情報編集</h5>
                <div class="mt-3"></div>
                <%= form_with(model: @product, url: admins_product_path(@product)) do |f| %>
                    <%= render 'layouts/error_messages', object: f.object %>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <div class="field form-group">
                                <%= f.label :name, "商品名" %>
                                <%= f.text_field :name, class:"form-control form-control-sm" %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :image, "商品画像" %><br>
                                <%= attachment_image_tag @product, :image, :fill, 150, 150, class: "border", fallback: "pic_default/no-image.jpg", size:'150x150' %><br>
                                <div class="mt-1"></div>
                                <%= f.attachment_field :image %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :price, "商品価格（税抜）" %>
                                <%= f.text_field :price, class:"form-control form-control-sm" %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :genre_id, "商品ジャンル" %><br/>
                                <%= f.collection_select :genre_id, Genre.all ,:id, :name, {prompt: "選択してください"}, class:"form-control form-control-sm" %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :description, "商品説明" %>
                                <%= f.text_area :description, class:"form-control form-control-sm", style:"height: 100px;" %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :producer_id, "生産者選択" %>
                                <%= f.collection_select :producer_id, Producer.all ,:id, :name, {prompt: "選択してください"}, class:"form-control form-control-sm" %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :sale_status, "販売状況ステータス" %><br/>
                                <%= f.select :sale_status, Product.sale_statuses_i18n.invert, {prompt: "選択してください"}, class:"form-control form-control-sm" %>
                            </div>

                            <div class="mt-5"></div>
                            <div class="action">
                                <%= f.submit "保存", class:"btn btn-sm btn-info col-lg-4" %>
                                <div class="mb-3"></div>
                                <%= link_to "商品を削除する", admins_product_path(@product), class:"btn btn-sm btn-danger col-lg-4", method:"delete", data:{ confirm: "本当に削除しますか？" } %>
                            </div>

                            <div class="mt-4"></div>
                            <%= link_to "戻る", admins_product_path(@product), class:"" %>

                        </div>
                    </div>
                <% end %>
            </div>

    </div>
</div>