<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>ORDERS</h3>
            </div>
            
        </div>
        
        <div class="col-lg-9 mx-auto my-4">
            <h5>注文履歴一覧</h5>
            <table class="table">
                <thead style="background-color: #d6b918; color: #FFFFFF;">
                    <tr>
                        <th>ID</th>
                        <th>注文者</th>
                        <th>請求額</th>
                        <th>注文ステータス</th>
                        <th>注文日</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                        <tr>
                            <td><%= order.id %></td>
                            <td>
                                <%= link_to admins_order_path(order) do %>
                                    <%= order.customer.full_name %>
                                <% end %>
                            </td>
                            <td><%= order.total_price %></td>
                            <td><%= order.order_status_i18n %></td>
                            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                        </tr>
                    <% end %>
                </tbody>

            </table>
            <%= paginate @orders %>
        </div>


    </div>
</div>