<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>PRODUCER DETAIL</h3>
        </div>

        <div class="col-lg-9 mx-auto my-4">
            <div class="p-4" style="background-color: #f2f2f2; border: 4px solid #d4778d; border-radius: 2px;">
                <h4>生産者詳細</h4>
                <div class="pt-5"></div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="text-center">
                            <%= attachment_image_tag @producer, :image, :fill, 300, 300, class: "border", fallback: "pic_default/no-image.jpg", size:'300x300' %>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mt-4"></div>

                        <h6>生産者名</h6>
                        <h5><%= @producer.name %> さん</h5>

                        <div class="mt-5"></div>

                        <h6>生産者説明</h6>
                        <p><%= @producer.description %></p>

                        <div class="mt-4"></div>

                        <h6>表示ステータス</h6>
                        <p><%= @producer.producer_status_i18n %></p>

                        <div class="mt-4"></div>
                        <%= link_to "編集する", edit_admins_producer_path, class:"btn btn-sm btn-success col-lg-5" %>
                        <div class="mt-4"></div>
                        <%= link_to "生産者を削除する", admins_producer_path(@producer), class:"btn btn-sm btn-danger col-lg-5", method:"delete", data:{ confirm: "本当に削除しますか？" } %>
                    </div>

                    <div class="col-lg-12">
                        <div class="pt-4"></div>
                        <p>「 <%= @producer.name %> 」さんの他の商品</p>
                        <div class="row p-4">
                            <%# 生産者の商品 %>
                            <% @products.each do |product| %>
                                <div class="col-lg-3 pt-3">

                                    <div class="text-center">
                                        <%= link_to admins_product_path(product) do %>
                                            <%= attachment_image_tag product, :image, :fill, 120, 120, class: "border", fallback: "pic_default/no-image.jpg", size:'120x120' %>
                                        <% end %>
                                    </div>

                                    <div class="pt-2"></div>

                                    <div class="text-left">
                                        <h6>
                                            <%= link_to product_path(product) do %>
                                                <%= product.name %>
                                            <% end %>
                                        </h6>
                                    </div>
                                    <div class="text-right">
                                        <p><%= product.add_tax_price.to_s(:delimited) %> 円</p>
                                    </div>

                                    <%= link_to "詳細をみる", admins_product_path(product), class:"btn btn-sm btn-drk col-lg-12" %>

                                </div>

                            <% end %>
                            <%# 生産者の商品 終わり %>
                        </div>
                    </div>
                    
                    <%# ページネーション %>
                    <div class="row">
                        <div class="mx-auto">
                            <div class="pt-4"></div>
                            <%= paginate @products %>
                        </div>
                    </div>
                    <%# ページネーション 終わり %>

                </div>

                <div class="mt-4"></div>
                <%= link_to "戻る", admins_producers_path, class:"" %>
            </div>
        </div>


    </div>
</div>