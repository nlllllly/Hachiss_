<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>PRODUCER EDIT</h3>
        </div>

        <div class="col-lg-9 mx-auto my-4">
            <div class="p-4" style="background-color: #f2f2f2; border: 4px solid #d4778d; border-radius: 2px;">
                <h4>生産者情報編集</h4>
                <div class="pt-5"></div>

                <%= form_with(model: @producer, url: admins_producer_path(@producer)) do |f| %>
                    <%= render 'layouts/error_messages', object: f.object %>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <div class="field form-group">
                                <%= f.label :name, "生産者名" %>
                                <%= f.text_field :name, class:"form-control form-control-sm" %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :image, "生産者画像" %><br>
                                <%= attachment_image_tag @producer, :image, :fill, 150, 150, class: "border img-fluid", fallback: "pic_default/no-image.jpg", size:'150x150' %><br>
                                <div class="mt-1"></div>
                                <%= f.attachment_field :image %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :description, "生産者説明" %>
                                <%= f.text_area :description, class:"form-control form-control-sm", style:"height: 100px;" %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :producer_status, "表示ステータス" %><br/>
                                <%= f.select :producer_status, Producer.producer_statuses_i18n.invert, {prompt: "選択してください"}, class:"form-control form-control-sm" %>
                            </div>

                            <div class="mt-5"></div>
                            <div class="action">
                                <%= f.submit "保存", class:"btn btn-sm btn-info col-lg-4" %>
                                <div class="mt-3"></div>
                                <%= link_to "商品を削除する", admins_producer_path(@producer), class:"btn btn-sm btn-danger col-lg-4", method:"delete", data:{ confirm: "本当に削除しますか？" } %>
                            </div>

                            <div class="mt-4"></div>
                            <%= link_to "戻る", admins_producer_path(@producer), class:"" %>
                        </div>
                    </div>
                <% end %>
            </div>







    </div>
</div>