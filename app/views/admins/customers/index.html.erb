<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>CUSTOMERS</h3>

            <%# 会員検索フォーム %>
            <div class="form-row">
                <div class="col-lg-4">
                    <%= form_with(url: admins_customers_path, method: :get, local: true, class: "input-group") do |f| %>
                        <%= f.text_field :keyword, id: "", class:"form-control form-control-sm input-group-prepend", placeholder:"会員を検索" %>
                        <div class="input-group-append">
                            <%= f.button "", type:"submit", class:"btn btn-sm btn-dark" do %>
                                <i class="fas fa-search"></i>
                            <% end %>
                        </div>
                    <% end %>
                </div>
            </div>
            <%# 会員検索フォーム 終わり %>

            <div class="pt-4"></div>

        </div>

        <div class="col-lg-9 mx-auto my-4">
            <h5>会員一覧</h5>
            <table class="table">
                <thead style="background-color: #2cb67d; color: #FFFFFF;">
                    <tr>
                        <th>ID</th>
                        <th>会員名</th>
                        <th>利用状況</th>
                        <th>利用開始日</th>
                    </tr>
                </thead>
                <tbody>
                    <% @customers.each do |customer| %>
                        <tr>
                            <td><%= customer.id %></td>
                            <td>
                                <%= link_to admins_customer_path(customer) do %>
                                    <%= customer.full_name %>
                                <% end %>
                            </td>
                            <td><%= customer.active_status %></td>
                            <td><%= customer.created_at.strftime('%Y/%m/%d') %></td>
                        </tr>
                    <% end %>
                </tbody>

            </table>
            <%= paginate @customers %>
        </div>


    </div>
</div>