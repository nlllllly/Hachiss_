<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>CUSTOMER DETAIL</h3>
        </div>

        <div class="col-lg-9 mx-auto my-4">
            <div class="p-4" style="background-color: #f2f2f2; border: 4px solid #5191c2; border-radius: 2px;">
                <h5>会員詳細</h5>
                <div class="mt-3"></div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="text-center">
                            <%# <%= attachment_image_tag @customer, :image, :fill, 300, 300, class: "border", fallback: "pic_default/no-image.jpg", size:'300x300' %> %>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mt-4"></div>

                        <h6>会員名（カナ）</h6>
                        <h5><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></h5>

                        <div class="mt-5"></div>
                        <h6>会員名</h6>
                        <h5><%= @customer.full_name %></h5>

                        <div class="mt-5"></div>

                        <h6>性別</h6>
                        <h5><%= @customer.sex_i18n %></h5>

                        <div class="mt-5"></div>

                        <h6>生年月日</h6>
                        <p><%= @customer.birth_date %></p>

                        <div class="mt-4"></div>

                        <h6>住所</h6>
                        <p><%= @customer.postcode %></p>
                        <p><%= @customer.prefecture_name %></p>
                        <p><%= @customer.address_city %> <%= @customer.address_street %> <%= @customer.address_building %></p>

                        <div class="mt-4"></div>

                        <h6>電話番号</h6>
                        <p><%= @customer.phone_number %></p>

                        <div class="mt-4"></div>

                        <h6>利用状況</h6>
                        <p><%= @customer.active_status %></p>

                        <div class="mt-4"></div>
                        
                        <%= form_with(model: @customer, url: admins_customer_path(@customer)) do |f| %>
                            <div class="field form-group">
                                <%= f.label :is_deleted, "利用状況" %><br/>
                                <%= f.radio_button :is_deleted, value: false %>
                                <%= f.label :is_deleted, "利用中", value: false %>
                                /
                                <%= f.radio_button :is_deleted, value: true %>
                                <%= f.label :is_deleted, "利用停止中", value: true %>
                            </div>
                            <div class="action">
                                <%= f.submit "保存", class:"btn btn-sm btn-info col-lg-3" %>
                            </div>
                        <% end %>

                    </div>
                </div>

                <div class="mt-4"></div>
                <%= link_to "戻る", admins_customers_path, class:"" %>
            </div>
        </div>


    </div>
</div>