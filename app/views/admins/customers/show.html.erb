<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>CUSTOMER DETAIL</h3>
        </div>

        <div class="col-lg-9 mx-auto my-4">
            <div class="p-4" style="background-color: #f2f2f2; border: 4px solid #2cb67d; border-radius: 2px;">
                <h4>会員情報</h4>
                <div class="pt-5"></div>

                <%# 会員情報 %>
                <div class="px-2">
                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>メールアドレス：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.email %></p>
                        </div>
                    </div>

                    <div class="border-top border-secondary"></div>
                    <div class="pb-3"></div>

                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>名前（カナ）：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></p>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>名前（漢字）：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.full_name %></p>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>性別：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.sex_i18n %></p>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>電話番号：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.phone_number %></p>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>生年月日：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.birth_date %></p>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>郵便番号：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.postcode %></p>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>都道府県：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.prefecture_name %></p>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-5">
                            <h6>住所：</h6>
                        </div>
                        <div class="col-7">
                            <p><%= @customer.address_city %> <%= @customer.address_street %> <%= @customer.address_building %></p>
                        </div>
                    </div>

                    <div class="border-top border-secondary"></div>
                    <div class="pb-3"></div>

                    <%# 会員利用状況の選択フォーム %>
                    <%= form_with(model: @customer, url: admins_customer_path(@customer)) do |f| %>
                        <div class="row pl-2">
                            <div class="field form-group col-5">
                                <h6><%= f.label :is_deleted, "利用状況の変更：" %></h6>
                            </div>
                            <div class="field form-group col-7">
                                <%= f.radio_button :is_deleted, :false %> <%= f.label :is_deleted, "利用中", value: false %>
                                <%= f.radio_button :is_deleted, :true %> <%= f.label :is_deleted, "利用停止中", value: true %>
                            </div>
                        </div>

                        <div class="pb-3"></div>
                        <div class="action text-center">
                            <%= f.submit "保存", class:"btn btn-sm btn-info col-lg-3" %>
                        </div>
                    <% end %>
                    <%# 会員利用状況の選択フォーム 終わり %>
                
                    <div class="pt-3"></div>
                    <div class="border-top border-secondary"></div>
                    <div class="pb-3"></div>

                    <h6>登録済み 配送先一覧</h6>
                    <table class="table table-bordered">
                    <thead style="color: #FFFFFF; background-color: #2cb67d;">
                        <tr>
                            <th>氏名（漢字）</th>
                            <th>氏名（カナ）</th>
                            <th>郵便番号</th>
                            <th>住所</th>
                        </tr>
                    </thead>
                    <tbody style="color: #2cb67d; background-color: #fffffe;">
                        <% @customer.shippings.each do |shipping| %>
                            <tr>
                                <td><%= shipping.full_name %></td>
                                <td><%= shipping.last_name_kana %> <%= shipping.first_name_kana %></td>
                                <td><%= shipping.postcode %></td>
                                <td><%= shipping.shipping_full_address %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>

                </div>
                <%# 会員情報 終わり %>
                    
                <div class="pt-4"></div>
                <%= link_to "戻る", admins_customers_path, class:"" %>

            </div>
        </div>


    </div>
</div>