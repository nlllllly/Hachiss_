<div class="container-fluid" style="background-color: #afb3c4;">
  <div class="row p-4">
        
    <%# 管理者アカウント編集フォーム %>
    <div class="col-xs-12 mx-auto">

      <div class="text-center p-5 m-4" style="background-color: #EAEAEA; border: 3px solid #272343; border-radius: 5px;">

        <h3>管理者アカウント 編集</h3>
        <div class="pt-3"></div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "admins/shared/error_messages", resource: resource %>


          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group">
            <%= f.label :password %> <i>（アドレス変更時にも入力してください）</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control" %>
            <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> 文字以上</em>
            <% end %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :current_password %> <i></i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "変更を保存する", class:"btn btn-danger col-lg-3" %>
          </div>

          <div class="mt-5"></div>
          
          <h3>アカウント削除</h3>
          <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

          <%= link_to "Back", :back %>

        </div>
      <% end %>
      <%# 管理者アカウント編集フォーム 終わり %>

  </div>
</div>

