<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>GENRE EDIT</h3>
        </div>

        <div class="my-4"></div>

        <div class="col-lg-9 mx-auto my-4">
            <div class="p-4" style="background-color: #f2f2f2; border: 4px solid #73b6bd; border-radius: 2px;">
                <h4>ジャンル情報編集</h4>
                <div class="pt-5"></div>

                <%= form_with(model: @genre, url: admins_genre_path(@genre), local: true) do |f| %>
                    <%= render 'layouts/error_messages', object: f.object %>
                    <div class="form-row">
                        <div class="col-lg-12">
                            <div class="field form-group">
                                <%= f.label :name, "ジャンル名" %>
                                <%= f.text_field :name, class:"form-control form-control-sm col-lg-4" %>
                            </div>
                            <div class="mt-3"></div>
                            <div class="field form-group">
                                <%= f.label :genre_status, "公開状況ステータス" %><br/>
                                <%= f.radio_button :genre_status, :active %>
                                <%= f.label :active, "有効" %>
                                /
                                <%= f.radio_button :genre_status, :invaild %>
                                <%= f.label :invaild, "無効" %>
                            </div>

                            <div class="action">
                                <div class="mt-3"></div>
                                <%= f.submit "保存", class:"btn btn-sm btn-info col-lg-2" %>
                                <div class="mt-4"></div>
                                <%= link_to "削除する", admins_genre_path(@genre), class:"btn btn-sm btn-danger col-lg-2", method:"delete", data:{ confirm: "本当に削除しますか？" } %>
                            </div>
                            
                            <div class="pt-5"></div>
                            <%= link_to "戻る", admins_genres_path, class:"" %>
                            
                        </div>
                    </div>
                <% end %>
            </div>

        <div class="my-4"></div>

        </div>


    </div>
</div>