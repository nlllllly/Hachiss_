<div class="container-fluid my-4">
    <div class="row">
        <div class="col-lg-9 mx-auto">
            <h3>GENRES & REGISTRATION</h3>
        </div>

        <div class="col-lg-9 mx-auto my-4">
            <div class="p-3" style="background-color: #f2f2f2; border: 4px solid #73b6bd; border-radius: 2px;">
                <h4>ジャンル新規登録</h4>
                <div class="pt-5"></div>

                <%= form_with(model: @genre, url: admins_genres_path, local: true) do |f| %>
                    <%= render 'layouts/error_messages', object: f.object %>
                    <div class="form-row">
                        <div class="col-lg-3">
                            <div class="field form-group">
                                <%= f.label :name, "ジャンル名" %>
                                <%= f.text_field :name, class:"form-control form-control-sm" %>
                            </div>
                        </div>
                        <div class="mr-3"></div>
                        <div class="col-lg-3">
                            <div class="field form-group">
                                <%= f.label :genre_status, "公開状況" %><br/>
                                <%= f.radio_button :genre_status, :active %>
                                <%= f.label :active, "有効" %>
                                /
                                <%= f.radio_button :genre_status, :invaild %>
                                <%= f.label :invaild, "無効" %>
                                <%= f.submit "登録", class:"btn btn-sm btn-info col-lg-4" %>
                            </div>
                            <div class="pb-4"></div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>


        <div class="col-lg-9 mx-auto my-4">
            <h5>ジャンル一覧</h5>
            <table class="table">
                <thead style="background-color: #73b6bd;">
                    <tr>
                        <th>ID</th>
                        <th>ジャンル名</th>
                        <th>公開ステータス</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                        <tr>
                            <td><%= genre.id %></td>
                            <td>
                                <%= link_to edit_admins_genre_path(genre) do %>
                                    <%= genre.name %>
                                <% end %>
                            </td>
                            <td><%= genre.genre_status_i18n %></td>
                            <td><%= link_to "削除", admins_genre_path(genre), class:"btn btn-sm btn-danger", method:"delete", data:{ confirm: "本当に削除しますか？" } %></td>
                        </tr>
                    <% end %>
                </tbody>

            </table>
            <%= paginate @genres %>
        </div>


    </div>
</div>