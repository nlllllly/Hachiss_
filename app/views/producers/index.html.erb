<div class="container-fluid">
    <div class="row p-4">

        <%# メイン %>
        <div class="col-lg-10 mx-auto">

            <h3>生産者一覧</h3>
            <div class="pb-2"></div>

            <div class="p-3" style="background-color: #f2f2f2; border: 3px solid #272343; border-radius: 2px;">
                <div class="row p-4">
                    
                    <%# 生産者個々の表示 %>
                    <% @producers.each do |producer| %>
                        <div class="col-lg-6 pt-3">

                            <div class="row">
                                <div class="col-lg-6">

                                    <div class="text-center">
                                        <%= link_to producer_path(producer) do %>
                                            <%= attachment_image_tag producer, :image, :fill, 180, 180, class: "border", fallback: "pic_default/no-image.jpg", size:'180x180' %>
                                        <% end %>
                                    </div>
                                
                                </div>

                                <div class="col-lg-6">
                                    <div class="pt-4"></div>

                                    <div class="text-center">
                                        <h5>
                                            <%= link_to producer_path(producer) do %><%= producer.name %><% end %>
                                        </h5>
                                    </div>

                                    <div class="pt-2"></div>

                                    <div class="buttons_<%= producer.id %>">
                                        <%= render 'producer_favorites/favorite_button', producer: producer %>
                                    </div>

                                    <div class="pt-2"></div>

                                    <%= link_to "生産者の詳細をみる", producer_path(producer), class:"btn btn-sm btn-blm col-lg-12" %>

                                </div>

                            </div>

                            <div class="pt-4"></div>
                            <div class="border-bottom border-secondary"></div>
                            <div class="pt-2"></div>

                        </div>
                    <% end %>
                    <%# 生産者個々の表示 終わり %>

                </div>
            </div>


            <%# ページネーション %>
            <div class="row">
                <div class="mx-auto">
                    <div class="pt-4"></div>
                    <%= paginate @producers %>
                </div>
            </div>
            <%# ページネーション 終わり %>


        </div>
        
    </div>
</div>