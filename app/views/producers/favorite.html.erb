<div class="container-fluid">
    <div class="row">

        <%# メイン %>
        <div class="col-lg-10 p-4">
            <h3>フォロー中の生産者</h3>
            <div class="pb-5"></div>

            <div class="p-3" style="background-color: #f2f2f2; border: 3px solid #272343; border-radius: 2px;">
                <div class="row p-4">
                    

                    <%# 会員がお気に入りした生産者がヒットした時 / しなかった時 %>
                    <% if current_customer.favorite_producers.exists? %>

                        <% current_customer.favorite_producers.each do |producer| %>
                            <div class="col-lg-6 pt-3">

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="text-center">
                                            <%= link_to producer_path(producer) do %>
                                                <%= attachment_image_tag producer, :image, :fill, 180, 180, class: "border img-fluid", fallback: "pic_default/no-image.jpg", size:'180x180' %>
                                            <% end %>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="pt-4"></div>
                                        <div class="text-center">
                                            <%= link_to producer_path(producer) do %>
                                                <h5><%= producer.name %></h5>
                                            <% end %>
                                        </div>
                                        <div class="pt-2"></div>
                                        <div class="buttons_<%= producer.id %>">
                                            <%= render 'producer_favorites/favorite_button', producer: producer %>
                                        </div>
                                        <div class="pt-2"></div>
                                        <%= link_to "生産者の詳細をみる", producer_path(producer), class:"btn btn-sm btn-blm col-lg-12" %>
                                    </div>

                                </div>

                                <div class="pt-4"></div>
                                <div class="border-bottom border-secondary"></div>
                                <div class="pt-2"></div>

                            </div>
                        <% end %>


                    <% else %>
                        <div class="py-5 mx-auto">
                            <div class="pt-5"></div>
                            <h5>フォロー中の生産者が見つかりませんでした</h5>
                            <div class="pb-5"></div>
                        </div>
                    <% end %>
                        

                </div>
            </div>


        </div>
        
        <div class="col-lg-2 py-4" style="background-color: #e6ffff;">
            <%# サイドバー %>
            <%= render 'layouts/sidebar', genres: @genres, producers: @producers %>
            <%# サイドバー 終わり %>
        </div>
    
    </div>
</div>